// Prisma Schema for IranTour-Guide

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ========================================
// USER & AUTH
// ========================================

enum UserRole {
  ADMIN
  TOUR_OPERATOR
  GUIDE
  USER
}

model User {
  id            String    @id @default(cuid())
  name          String
  email         String    @unique
  emailVerified Boolean   @default(false)
  password      String?
  phone         String?   @unique
  phoneVerified Boolean   @default(false)
  avatar        String?
  role          UserRole  @default(USER)
  bio           String?
  address       String?
  nationalId    String?

  // Relations
  accounts      Account[]
  sessions      Session[]
  bookings      Booking[]
  reviews       Review[]
  tours         Tour[]    @relation("TourOperator")

  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  @@index([email])
  @@index([phone])
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// ========================================
// TOURS
// ========================================

enum TourCategory {
  CULTURAL
  NATURE
  ADVENTURE
  HISTORICAL
  RELIGIOUS
  FOOD
}

enum TourStatus {
  DRAFT
  PUBLISHED
  ARCHIVED
}

enum TourDifficulty {
  EASY
  MODERATE
  HARD
}

model Tour {
  id               String         @id @default(cuid())
  title            String
  slug             String         @unique
  description      String         @db.Text
  shortDescription String?
  category         TourCategory
  status           TourStatus     @default(DRAFT)
  price            Float
  duration         Int            // in days
  maxCapacity      Int
  minCapacity      Int?
  difficulty       TourDifficulty @default(MODERATE)
  images           String[]
  includes         String[]
  excludes         String[]
  rating           Float?
  reviewsCount     Int            @default(0)
  operatorId       String

  // Relations
  operator         User              @relation("TourOperator", fields: [operatorId], references: [id])
  destinations     TourDestination[]
  itinerary        TourItinerary[]
  bookings         Booking[]
  reviews          Review[]

  createdAt        DateTime       @default(now())
  updatedAt        DateTime       @updatedAt

  @@index([slug])
  @@index([category])
  @@index([status])
  @@index([operatorId])
}

model Destination {
  id          String   @id @default(cuid())
  name        String
  city        String
  province    String
  latitude    Float
  longitude   Float
  description String?  @db.Text

  // Relations
  tours       TourDestination[]

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([city])
  @@index([province])
}

model TourDestination {
  tourId        String
  destinationId String
  order         Int

  tour          Tour        @relation(fields: [tourId], references: [id], onDelete: Cascade)
  destination   Destination @relation(fields: [destinationId], references: [id], onDelete: Cascade)

  @@id([tourId, destinationId])
}

model TourItinerary {
  id          String   @id @default(cuid())
  tourId      String
  day         Int
  title       String
  description String   @db.Text
  activities  String[]

  tour        Tour     @relation(fields: [tourId], references: [id], onDelete: Cascade)

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([tourId])
}

// ========================================
// BOOKINGS
// ========================================

enum BookingStatus {
  PENDING
  CONFIRMED
  CANCELLED
  COMPLETED
}

model Booking {
  id              String        @id @default(cuid())
  userId          String
  tourId          String
  numberOfPeople  Int
  startDate       DateTime
  endDate         DateTime
  totalPrice      Float
  status          BookingStatus @default(PENDING)
  specialRequests String?       @db.Text

  // Relations
  user            User      @relation(fields: [userId], references: [id])
  tour            Tour      @relation(fields: [tourId], references: [id])
  payment         Payment?

  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  @@index([userId])
  @@index([tourId])
  @@index([status])
}

// ========================================
// PAYMENTS
// ========================================

enum PaymentStatus {
  PENDING
  PAID
  FAILED
  REFUNDED
}

enum PaymentMethod {
  ZARINPAL
  SAMAN
  MELLAT
  WALLET
}

model Payment {
  id            String        @id @default(cuid())
  bookingId     String        @unique
  amount        Float
  status        PaymentStatus @default(PENDING)
  method        PaymentMethod
  transactionId String?
  authority     String?
  refNumber     String?

  // Relations
  booking       Booking @relation(fields: [bookingId], references: [id])

  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt

  @@index([bookingId])
  @@index([status])
}

// ========================================
// REVIEWS
// ========================================

model Review {
  id        String   @id @default(cuid())
  userId    String
  tourId    String
  rating    Int      // 1-5
  comment   String   @db.Text
  images    String[]

  // Relations
  user      User     @relation(fields: [userId], references: [id])
  tour      Tour     @relation(fields: [tourId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
  @@index([tourId])
  @@index([rating])
}
